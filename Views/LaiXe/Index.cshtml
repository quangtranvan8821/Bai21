@model DanhGiaLaiXe
@{
    ViewData["Title"] = "Đánh giá lái xe";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="LaixeID">Lái xe:</label>
        <select class="form-control" id="LaixeID" name="LaixeID" required>
            <option value="">-- Chọn lái xe --</option>
            @* @foreach (var laixe in ViewBag.LaixeList)
            {
                <option value="@laixe.LaixeID">@laixe.Hoten</option>
            } *@
        </select>
    </div>
    <div class="form-group">
        <label for="Ngaydanhgia">Ngày đánh giá:</label>
        <input type="date" class="form-control" id="Ngaydanhgia" name="Ngaydanhgia" required>
    </div>
    <div class="form-group">
        <label>Điểm đánh giá:</label><br>
        @for (int i = 1; i <= 5; i++)
        {
            <label class="radio-inline">
                <input type="radio" name="Sosao" value="@i" required> @i
            </label>
        }
    </div>
    <button type="submit" class="btn btn-primary">Gửi đánh giá</button>
</form>